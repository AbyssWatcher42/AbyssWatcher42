#include <stdio.h>

int	main(void)
{
	int i;
	int j;
	int n;
	char input;

	i = 0;
	j = 0;
	n = 5;
	input = 'a';


	printf("input here: ");
	scanf("%c", &input);
	
	while (i++ < n)
	{
		while (j <= 2*n-1)
		{
			if (j >= n-(i-1) && j <= n+(i-1)) 
			{
				printf("%c", input);
			}
			i++;
			else if
				printf("+"); 
		}
		i++;
		printf("\n");
	}
	return (0);
}
